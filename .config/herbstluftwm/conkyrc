${color1}Load:${color0} ${loadavg} ${offset 10}\
${color1}Temp:${color0} ${hwmon 0 temp 1}Â°C ${offset 10}\
${color1}Mem:${color0} ${memperc}% (${mem}/${memmax}) ${offset 10}\
${color1}Batt:${color0} ${battery_short} (${battery_time}) ${offset 20}\
${if_up enp12s0}${color1}enp12s0:${color0} ${addrs enp12s0} \
${color1}up${color0}${offset -18}${upspeedf enp12s0} (${offset -6}${totalup enp12s0}) \
${color1}down${color0}${offset -18}${downspeedf enp12s0} (${totaldown enp12s0}) ${endif}\
${if_up wlp6s0}${color1}wlp6s0:${color0} \
${wireless_essid wlp6s0} (${offset -12}${wireless_link_qual_perc wlp6s0}%) ${addrs wlp6s0} \
